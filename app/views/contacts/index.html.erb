<div class="row">
  <div class="col-12 d-flex py-2 justify-content-end">
    <%= link_to 'Novo contatx', new_contact_path, class: "btn btn-info btn-sm" %>
  </div>
  <div class="col-12">
    <div class="card">
      <h3 class="card-header text-white bg-dark">
        Contatos
      </h3>
      <div class="card-body">
        <table class="d-none d-md-table table table-bordered">
          <thead>
            <tr>
              <th>Nome1</th>
              <th>Telefone</th>
              <th>Email</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @contacts.each do |contact| %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.phone %></td>
              <td><%= contact.email %></td>
              <td>
                <%= link_to 'ver', contact, class: "btn btn-dark btn-sm" %>
                <%= link_to 'editar', edit_contact_path(contact), class: "btn btn-dark btn-sm" %>
                <%= link_to 'apagar', contact, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <% @contacts.each do |contact| %>
          <div class="d-flex d-md-none card mb-2">
            <p class="card-header">
              Contato <%= contact.name %>
            </p>
            <div class="card-body">
              <p>
                <strong>Nome:</strong>
                <%= contact.name %>
              </p>

              <p>
                <strong>Telefone:</strong>
                <%= contact.phone %>
              </p>

              <p>
                <strong>E-mail:</strong>
                <%= contact.email %>
              </p>
              <%= link_to 'ver', contact, class: "btn btn-dark" %>
              <%= link_to 'editar', edit_contact_path(contact), class: "btn btn-dark" %>
              <%= link_to 'apagar', contact, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
