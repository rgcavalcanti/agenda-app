<div class="row">
  <div class="col-12 d-flex py-2 justify-content-end">
    <%= link_to 'Novo contato', new_contact_path, class: "btn btn-info btn-sm" %>
  </div>
  <div class="col-12">
    <div class="card">
      <h3 class="card-header text-white bg-dark">
        Contatos
      </h3>
      <div class="card-body">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Telefone</th>
              <th>Email</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @contacts.each do |contact| %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.phone %></td>
              <td><%= contact.email %></td>
              <td>
                <%= link_to 'ver', contact, class: "btn btn-dark btn-sm" %>
                <%= link_to 'editar', edit_contact_path(contact), class: "btn btn-dark btn-sm" %>
                <%= link_to 'apagar', contact, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
