<div class="row">
  <div class="col-12 d-flex py-2 justify-content-end">
    <%= link_to 'Editar', edit_contact_path(@contact), class: "btn btn-info btn-sm mr-2" %>
    <%= link_to 'Voltar', contacts_path, class: "btn btn-info btn-sm" %>
  </div>
  <div class="col-12">
    <div class="card">
      <h3 class="card-header text-white bg-dark">
        Contato <%= @contact.name %>
      </h3>
      <div class="card-body">
        <p>
          <strong>Name:</strong>
          <%= @contact.name %>
        </p>

        <p>
          <strong>Phone:</strong>
          <%= @contact.phone %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @contact.email %>
        </p>
      </div>
    </div>
  </div>
</div>
